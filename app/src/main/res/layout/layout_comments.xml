<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/textUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="BillyGates"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textcomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textUser"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:text="This has good battery life!"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textAgrees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textcomment"

                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="24dp"
                android:background="@color/purple_500"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textcomment"


                android:layout_alignBottom="@+id/textAgrees"

                android:layout_alignParentRight="false"
                android:layout_marginStart="68dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/imageButton"
                android:background="@color/purple_500"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textcomment"

                android:layout_alignBottom="@+id/textAgrees"
                android:layout_marginStart="16dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="-5dp"
                android:layout_toEndOf="@+id/textAgrees"
                app:srcCompat="@android:drawable/arrow_up_float"
                tools:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_below="@id/textcomment"
                android:layout_alignBottom="@+id/imageButton"

                android:layout_alignParentEnd="false"

                android:layout_marginStart="44dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textDislikes"
                app:srcCompat="@android:drawable/arrow_down_float"
                tools:srcCompat="@android:drawable/arrow_up_float" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>